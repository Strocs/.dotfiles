{
  "context": {
    "fileName": [
      "CONTEXT.md",
      "GEMINI.md",
      "AGENTS.md"
    ],
    "fileFiltering": {
      "respectGitIgnore": false
    },
    "includeDirectories": [
      "~/.config/opencode/agent"
    ],
    "loadFromIncludeDirectories": true
  },
  "mcpServers": {
    "context7": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  "general": {
    "preferredEditor": "nvim",
    "vimMode": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "telemetry": {
    "enabled": false
  },
  "ui": {
    "theme": "GitHub"
  },
  "privacy": {
    "usageStatisticsEnabled": true
  }
}