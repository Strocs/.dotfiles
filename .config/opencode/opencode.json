{
  "$schema": "https://opencode.ai/config.json",
  "theme": "custom-tokyonight",
  "autoupdate": true,
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "username": "Strocs",
  "compaction": {
    "auto": false,
    "prune": true
  },
  "agent": {
    "explore": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "general": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "title": {
      "model": "github-copilot/gpt-4.1"
    },
    "summary": {
      "model": "github-copilot/claude-sonnet-4.5"
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git commit *": "ask",
      "git push *": "ask",
      "git push": "ask",
      "git push --force *": "ask",
      "git rebase *": "ask",
      "git reset --hard *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "**/.env": "deny",
      "**/.env.*": "deny",
      "**/secrets/**": "deny",
      "**/credentials.json": "deny"
    }
  },
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "alt+k",
    "messages_half_page_down": "alt+j",
    "messages_first": "ctrl+alt+k",
    "messages_last": "ctrl+alt+j",
    "messages_page_up": "ctrl+alt+u",
    "messages_page_down": "ctrl+alt+d",
    "session_child_cycle": "alt+l",
    "session_child_cycle_reverse": "alt+h",
    "session_parent": "alt+p",
    "sidebar_toggle": "ctrl+b"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": false
    },
    "rhinomcp": {
      "type": "local",
      "command": ["uvx", "rhinomcp"],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--executable-path",
        "/mnt/c/Program Files (x86)/Microsoft/Edge/Application/msedge.exe",
        "--extension",
        "--browser",
        "msedge"
      ],
      "environment": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "{env:PLAYWRIGHT_MCP_EXTENSION_TOKEN}"
      },
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "~"]
    }
  },
  "plugin": ["oh-my-opencode@latest", "opencode-antigravity-auth@latest"]
}
