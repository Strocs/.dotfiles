{
  "$schema": "https://opencode.ai/config.json",
  "theme": "custom-tokyonight",
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "alt+k",
    "messages_half_page_down": "alt+j",
    "messages_first": "ctrl+alt+k",
    "messages_last": "ctrl+alt+j",
    "messages_previous": "ctrl+alt+p",
    "messages_next": "ctrl+alt+n",
    "messages_page_up": "ctrl+alt+u",
    "messages_page_down": "ctrl+alt+d"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": true
    }
  }
}
